{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "brain/**"
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png|webp|mp3|mp4|woff|woff2|ttf|css|js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            },
            {
                "source": "/**",
                "headers": [
                    {
                        "key": "X-Frame-Options",
                        "value": "DENY"
                    },
                    {
                        "key": "X-Content-Type-Options",
                        "value": "nosniff"
                    },
                    {
                        "key": "Referrer-Policy",
                        "value": "strict-origin-when-cross-origin"
                    },
                    {
                        "key": "Permissions-Policy",
                        "value": "camera=(), microphone=(), geolocation=()"
                    }
                ]
            }
        ]
    }
}